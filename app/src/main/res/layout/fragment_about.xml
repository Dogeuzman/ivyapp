                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="\u25CF De Guzman, Jericko\n\u25CF Combo, John Kenneth\n\u25CF De Guzman, Jahn Andrei" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course: CPE 026 - Emerging Technologies 3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section: CPE41S4" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>